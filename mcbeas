sub printstatus {
	print "------------------------------------------------------------\n";
	print "PC:$PC              IR:$IR            A:$A\n";
	print "------------------------------------------------------------\n";
	foreach $j (0..7) {
		foreach $i (0, 8, 16, 24) {
			$k = $i + $j;
			printf "%3d %8s\t",$k,$MEM[$k];
		}
		print "\n";
	}
	print "------------------------------------------------------------\n";
	$nada = <STDIN>;
}
	
	
sub assemble {
	my @list = @_;
	my @p = makeasm(@list);

#use Data::Dumper; print "DUMPER:".Dumper(@p);
	asm2mem(@p);
	return @p;
}

# Ciclo de instruccion
sub run {
	my @prog = @_;

	my $halt = 0;
	while($halt == 0) {
		die "El PC sali√≥ de la memoria: $PC" if($PC < 0 || $PC > 31);
		@p = @{@prog[$PC]};
		print printline(@p) if(defined $v);
		$nada = <STDIN> if(defined $v);
		$IR = @MEM[$PC];
		$halt = execute($IR);
		printstatus if (defined $v);
	}

	print "Programa Terminado\n";
}

#----------------------------------

if(scalar(@ARGV) == 0) {
	my $msg = "mcbeas $ARGV[0] [opciones] fuente.mcbe\n";
	$msg .= "\t-a\tEnsamblar\n";
	$msg .= "\t-i\tInterpretar\n";
	$msg .= "\t-v\tVerboso\n";
	$msg .= "\t-g\tGenerar binario\n";
#	$msg .= "\t-r\tEjecutar binario\n";
	die $msg;
} 

my @lines, @prog;

if(defined $r) {
	@lines = readbin;
	#@prog = disassm(@lines);
	bin2mem(@lines);
	run(@prog);
	exit;
} else {
	@lines = readprog;
 	@prog = assemble(@lines);
}
if(defined $a) {
	printasm(@prog);
	exit;
}
if(defined $g) {
	print asm2bin(@prog);
	exit;
}
if(defined $i) {
	run(@prog);
	exit;
}	
